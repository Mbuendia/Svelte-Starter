{
  "database": {
    "rules": "database.rules.json"
  },
  "hosting": {
    "public": "dist",
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ],
    "headers": [
      {
        "source" : "**/*.@(eot|svg|ttf|woff|woff2|font.css)",
        "headers" : [
          {
            "key" : "Access-Control-Allow-Origin",
            "value" : "*"
          }
        ]
      }, {
        "source": "**/*.@(gif|jpeg|jpg|png|svg)",
        "headers": [
          {
            "key" : "Cache-Control",
            "value" : "max-age=7200"
          }
        ]
      }
    ]
  }
}
